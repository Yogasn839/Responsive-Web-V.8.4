<div class="container">
    <form action="/updatedata/ " method="POST">
        <label for="fname">Nama</label>
        <input type="text" name="nama" value="<%= data.nama %>" placeholder="Your name..">

        <label for="gender">Jenis Kelamin</label>
        <input type="text" name="jenis_kelamin" value="<%= data.jenis_kelamin %>" placeholder="Your gender..">


        <label for="age">Usia</label>
        <input type="text" name="usia" value="<%= data.usia %>" placeholder="Your age..">

        <label for="address">Alamat</label>
        <textarea type="address" name="alamat" value="<%= data.alamat %>" placeholder="Write something.." style="height:200px"></textarea>

        <input type="submit"></input>

    </form>
</div>